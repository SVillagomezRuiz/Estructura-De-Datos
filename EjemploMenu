#include <iostream>
#include <cmath>
#include "stdlib.h"
using namespace std;

int suma(int a, int b);
int mayor(int a, int b, int c);
int ciclo(int x);
double pesototal(int cantidadProductos);

int main() {
    int opcion, result, a, b;
    system("color 5");
    do {
        cout << "1. Determinar la suma de dos numeros\n";
        cout << "2. determinar el mayor de tres numeros\n";
        cout << "3. Calcular la serie con ciclo For\n";
        cout << "4. Calcular el peso total de productos\n";
        cout << "0. Salir\n";
        cout << "Opción: ";
        cin >> opcion;

        switch (opcion) {
        case 1: {
            cout << "ingresar el primer numero: ";
            cin >> a;
            cout << "ingresar el segundo numero: ";
            cin >> b;
            result = suma(a, b);
            cout << "el resultado es " << result << endl;
            break;
        }
        case 2: {
            int c, m;
            cout << "Introduce el primer numero: ";
            cin >> a;
            cout << "Introduce el segundo numero: ";
            cin >> b;
            cout << "Introduce el tercer numero: ";
            cin >> c;
            m = mayor(a, b, c);
            break;
        }
        case 3: {
            int cantidad;
            cout << "¿Cuantos productos deseas ingresar? ";
            cin >> cantidad;
            pesototal(cantidad);
            break;
        }
        case 0:
            cout << "¡Hasta luego!\n";
            return 0;
            break;
        default:
            cout << "Opcion no valida. Intenta de nuevo.\n";
            break;
        }
        system("pause");
        system("cls");
    } while (opcion != 0);

    return 0;
}

int mayor(int a, int b, int c) {


    if (a == b && b == c) {
        cout << "Todos los numeros son iguales.\n";
        return a;
    }
    else if (a > b && a > c) {
        cout << "El mayor numero es: " << a << endl;
        return a;
    }
    else if (b > a && b > c) {
        cout << "El mayor numero es: " << b << endl;
        return b;
    }
    else {
        cout << "El mayor numero es: " << c << endl;
        return c;
    }
}

int ciclo(int x) {
    double suma = 0;
    for (int b = 1; b <= 10; ++b) {
        suma += pow(x, b);
    }
    cout << "La suma total de la serie es: " << suma << endl;
    return suma;
}

double pesototal(int cantidadProductos) {
    double pesoTotal = 0.0;
    for (int i = 1; i <= cantidadProductos; i++) {
        double peso;
        cout << "Ingresa el peso del producto " << i << " (en gramos): ";
        cin >> peso;
        pesoTotal += peso;
    }
    cout << "El peso total de los productos es: " << pesoTotal << " gramos.\n";
    return pesoTotal;
}

int suma(int a, int b) {
    int resultado;
    resultado = a + b;
    return resultado;
}
